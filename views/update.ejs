<% include partials/header %>
<div class="container">
    <h1 style="text-align:center;">Edit<%=campground.name%></h1>
    <form action="/campPlaces/<%=campground._id%>?_method=PUT" method="POST">
        <div class="row" style="width:30%; margin:0 auto;">
            <div class="form-group w-100">
                <input type="text" name="campground[name]" value="<%=campground.name%>" class="form-control">    
            </div>
            <div class="form-group w-100">
                <input type="text" name="campground[url]" value="<%=campground.url%>" class="form-control">    
            </div>
            <div class="form-group w-100">
                <input type="text" name="campground[description]" value="<%=campground.description%>" class="form-control">    
            </div>
            <button class="btn btn-block btn-primary form-control">SUBMIT</button>    
            </div>
        </div>
    </form>
    <a href="/campPlaces">G0 BACK</a>
</div>
<% include partials/footer %>